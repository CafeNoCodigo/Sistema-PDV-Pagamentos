package com.minhaloja.sistema_pagamento.controller;

import javafx.animation.TranslateTransition;
import javafx.fxml.FXML;
import javafx.scene.control.Button;
import javafx.scene.layout.VBox;
import javafx.util.Duration;

public class TelaFormaPagamentoController {

    @FXML
    private VBox menuPane;
    @FXML
    private VBox vbText;
    
    @FXML
    private Label lb1;

    @FXML
    private Button menuButton;

    private boolean menuAberto = false;
    

    @FXML
    public void initialize() {
        menuButton.setOnAction(event -> toggleMenu());
    }

    private void toggleMenu() {
        TranslateTransition slide = new TranslateTransition(Duration.millis(250), menuPane);

        if (menuAberto) {
            slide.setToX(-200); // Esconde
            menuAberto = false;
        } else {
            slide.setToX(200); // Mostra (posição inicial é -200)
            menuAberto = true;
        }

        slide.play();
    }
}
