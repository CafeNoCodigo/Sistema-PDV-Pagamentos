			stage.setTitle("Fluxo de Caixa");
			stage.setResizable(false);
			stage.setMaximized(false);
			
			stage.setScene(new Scene(root));
			stage.show();
		} catch (IOException e) {
			e.printStackTrace();
		}
	}

